# Podstr Environment Configuration
# Copy this file to .env.local and update the values for your setup

# App Configuration
VITE_APP_NAME="My Podcast Community"
VITE_APP_DESCRIPTION="Building amazing podcast communities"
VITE_DEFAULT_RELAY="wss://relay.nostr.band"

# Theme Configuration (light, dark, or system)
VITE_DEFAULT_THEME="light"

# GitHub Repository (for links and attribution)
VITE_GITHUB_REPO="https://github.com/yourusername/podstr"

# Preset Relays (comma-separated list of relay URLs)
VITE_PRESET_RELAYS="wss://ditto.pub/relay,wss://relay.nostr.band,wss://relay.damus.io,wss://relay.primal.net"

# Analytics and Monitoring (optional)
